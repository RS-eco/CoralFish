keywords = {Fish behavior,Gear avoidance,Light response,ROV,Submersible,Survey bias},
number = {May 2016},
pages = {97--106},
title = {{Effects of simulated underwater vehicle lighting on fish behavior}},
volume = {391},
year = {2009}
