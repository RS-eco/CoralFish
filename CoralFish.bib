doi = {10.1111/j.1600-0587.2010.06436.x},
file = {:home/mabi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Moore, Van Niel, Harvey - 2011 - The effect of landscape composition and configuration on the spatial distribution of temperate demersal.pdf:pdf},
isbn = {1600-0587},
issn = {09067590},
journal = {Ecography},
number = {3},
pages = {425--435},
title = {{The effect of landscape composition and configuration on the spatial distribution of temperate demersal fish}},
volume = {34},
year = {2011}
}
